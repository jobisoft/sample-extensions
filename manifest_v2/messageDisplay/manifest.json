{
  "manifest_version": 2,
  "version": "2.0",
  "author": "Thunderbird Team",
  "name": "Message Display Example",
  "browser_specific_settings": {
    "gecko": {
      "id": "messageDisplay@mv2.sample.extensions.thunderbird.net"
    }
  },
  "permissions": [
    "messagesRead"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "message_display_action": {
    "default_popup": "popup.html",
    "default_title": "Action"
  }
}
