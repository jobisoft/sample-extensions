{
  "manifest_version": 2,
  "name": "Dexie IndexDB Example",
  "version": "1.0",
  "description": "Example on how to use a IndexDB with Dexie",
  "permissions": [
    "unlimitedStorage",
    "storage"
	],
  "browser_action": {
    "default_title": "Access DB!"
  },
  "applications": {
    "gecko": {
      "id": "DexieIndexDB@example.thunderbird.net",
      "strict_min_version": "115.0"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  }
}
