{
  "manifest_version": 2,
  "version": "1.0",
  "author": "Thunderbird Team",
  "name": "OptIn Screen Example",
  "description": "Example add-on asking the user for extended consent.",
  "browser_specific_settings": {
    "gecko": {
      "id": "optIn@sample.extensions.thunderbird.net"
    }
  },
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "64": "images/internet.png",
    "32": "images/internet-32px.png",
    "16": "images/internet-16px.png"
  }
}
