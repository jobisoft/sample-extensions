{
  "manifest_version": 2,
  "name": "Restart",
  "description": "Extension containing an experimental API that restarts Thunderbird from a menu item",
  "version": "1",
  "applications": {
    "gecko": {
      "id": "restart@sample.extensions.thunderbird.net"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "experiment_apis": {
    "restart": {
      "schema": "api/restart/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "restart"
          ]
        ],
        "script": "api/restart/implementation.js"
      }
    },
    "LegacyMenu": {
      "schema": "api/LegacyMenu/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "LegacyMenu"
          ]
        ],
        "script": "api/LegacyMenu/implementation.js"
      }
    }    
  }
}
