{
  "manifest_version": 2,
  "version": "1.0",
  "author": "Thunderbird Team",
  "name": "Experiment Example",
  "browser_specific_settings": {
    "gecko": {
      "id": "experiment@sample.extensions.thunderbird.net"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "experiment_apis": {
    "ExampleAPI": {
      "schema": "api/ExampleAPI/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "ExampleAPI"
          ]
        ],
        "script": "api/ExampleAPI/implementation.js"
      }
    },
    "ResourceUrl": {
      "schema": "api/ResourceUrl/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "ResourceUrl"
          ]
        ],
        "script": "api/ResourceUrl/implementation.js"
      }
    }
  }
}
