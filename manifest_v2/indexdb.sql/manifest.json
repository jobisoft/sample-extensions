{
  "manifest_version": 2,
  "name": "SQL IndexDB Example",
  "version": "1.0",
  "description": "Example on how to use a IndexDB with SQL",
  "permissions": [
    "unlimitedStorage",
    "storage"
	],
  "browser_action": {
    "default_title": "Access DB!"
  },
  "applications": {
    "gecko": {
      "id": "SqlIndexDB@example.thunderbird.net",
      "strict_min_version": "115.0"
    }
  },
  "content_security_policy": "default-src 'self' 'wasm-unsafe-eval'; script-src 'self' 'wasm-unsafe-eval'",
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  }
}
