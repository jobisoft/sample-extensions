{
  "manifest_version": 2,
  "version": "1.0",
  "author": "Thunderbird Team",
  "name": "Compose Body Example",
  "description": "A very basic example of message body manipulation using the compose API",
  "browser_specific_settings": {
    "gecko": {
      "id": "composebody@mv2.sample.extensions.thunderbird.net"
    }
  },
  "permissions": [
    "compose"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "compose_action": {
    "default_title": "Alter message body"
  }
}
