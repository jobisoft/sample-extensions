{
  "manifest_version": 2,
  "version": "1.0",
  "author": "Thunderbird Team",
  "name": "Menu Example",
  "browser_specific_settings": {
    "gecko": {
      "id": "menu@mv2.sample.extensions.thunderbird.net"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "type": "module"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "MenuExample",
    "allowed_spaces": []
  },
  "permissions": [
    "tabs",
    "menus",
    "menus.overrideContext",
    "accountsRead"
  ]
}
