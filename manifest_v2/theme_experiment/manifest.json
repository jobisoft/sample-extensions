{
  "manifest_version": 2,
  "version": "1.0",
  "author": "Thunderbird Team",
  "name": "Theme Experiment Example",
  "description": "Changing the border color of the write new message button using a theme_experiment.",
  "browser_specific_settings": {
    "gecko": {
      "id": "theme_experiment@mv2.sample.extensions.thunderbird.net",
      "strict_min_version": "102.0"
    }
  },
  "theme_experiment": {
    "stylesheet": "style.css",
    "colors": {
      "exp_write_button_border": "--write-button-border-color"
    }
  },
  "theme": {
    "colors": {
      "exp_write_button_border": "orange"
    }
  }
}



