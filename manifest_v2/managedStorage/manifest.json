{
  "manifest_version": 2,
  "version": "1.0",
  "author": "Thunderbird Team",
  "name": "Managed Storage Example",
  "description": "An example options UI using values from the managed storage",
  "browser_specific_settings": {
    "gecko": {
      "id": "managed-storage@mv2.sample.extensions.thunderbird.net"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "browser_action": {
    "default_title": "Managed Storage Example"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "permissions": [
    "storage"
  ]
}
