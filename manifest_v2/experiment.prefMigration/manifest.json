{
  "manifest_version": 2,
  "version": "1.0",
  "author": "Thunderbird Team",
  "name": "Legacy Preference Migration Experiment Example",
  "browser_specific_settings": {
    "gecko": {
      "id": "experiment.prefMigration@mv2.sample.extensions.thunderbird.net"
    }
  },
  "background": {
    "type": "module",
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "storage"
  ],
  "experiment_apis": {
    "PrefMigration": {
      "schema": "api/PrefMigration/schema.json",
      "parent": {
        "scopes": [
          "addon_parent"
        ],
        "paths": [
          [
            "PrefMigration"
          ]
        ],
        "script": "api/PrefMigration/implementation.js"
      }
    }
  }
}
