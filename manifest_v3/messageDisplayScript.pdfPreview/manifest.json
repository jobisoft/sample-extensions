{
  "manifest_version": 3,
  "version": "1.0",
  "author": "rom.holec@gmail.com,edouard@e-gaulue.com",
  "name": "Advanced Message Display Script Example (PDF Preview)",
  "browser_specific_settings": {
    "gecko": {
      "id": "messageDisplayScript.pdfPreview@sample.extensions.thunderbird.net",
      "strict_min_version": "110.0a1"
    }
  },
  "permissions": [
    "messagesRead",
    "messagesModify",
    "scripting"
  ],
  "background": {
    "scripts": [
      "pdf.js",
      "pdf.worker.js",
      "background.js"
    ]
  },
  "icons": {
    "16": "pdficon.png",
    "32": "pdficon.png",
    "64": "pdficon.png"
  }
}
