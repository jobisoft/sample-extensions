{
  "manifest_version": 3,
  "version": "1.0",
  "author": "Thunderbird Team",
  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "browser_specific_settings": {
    "gecko": {
      "id": "apiList@sample.extensions.thunderbird.net",
      "strict_min_version": "110.0a1"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "cloud_file": {
    "name": "__MSG_extensionName__",
    "management_url": "apis.html"
  },
  "options_ui": {
    "page": "apis.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "permissions": [
    "accountsFolders",
    "accountsRead",
    "activeTab",
    "addressBooks",
    "alarms",
    "browserSettings",
    "clipboardRead",
    "clipboardWrite",
    "compose",
    "contextualIdentities",
    "cookies",
    "dns",
    "downloads",
    "downloads.open",
    "geolocation",
    "idle",
    "management",
    "menus",
    "menus.overrideContext",
    "messagesMove",
    "messagesRead",
    "messagesModify",
    "nativeMessaging",
    "notifications",
    "pkcs11",
    "privacy",
    "proxy",
    "storage",
    "scripting",
    "tabHide",
    "tabs",
    "theme",
    "unlimitedStorage",
    "webNavigation",
    "webRequest",
    "webRequestBlocking"
  ],
  "action": {
    "default_title": "__MSG_extensionName__"
  },
  "compose_action": {
    "default_title": "__MSG_extensionName__"
  },
  "message_display_action": {
    "default_title": "__MSG_extensionName__"
  },
  "commands": {
    "toggle-feature": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "linux": "Ctrl+Shift+U"
      },
      "description": "Send a 'toggle-feature' event"
    }
  },
  "default_locale": "en"
}
