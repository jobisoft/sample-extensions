{
  "manifest_version": 3,
  "version": "1.0",
  "author": "Arnd Issler",
  "name": "Message Display Script Example",
  "browser_specific_settings": {
    "gecko": {
      "id": "messageDisplayScript@sample.extensions.thunderbird.net",
      "strict_min_version": "110.0a1"
    }
  },
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "permissions": [
    "messagesModify",
    "messagesRead"
  ]
}
